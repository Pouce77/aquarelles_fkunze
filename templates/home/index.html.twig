{% extends 'base.html.twig' %}

{% block body %}
	<body>
		<h1 class="fontTitle mt-2 text-center pb-2">Peintre Aquarelliste</h1>
		<div
			class="posTitle">
			<!--carousel-->
			<div id="carouselExampleControls" class="carousel carousel-fade" data-bs-ride="carousel">
				<div class="carousel-inner m-2">
					<div class="carousel-item active">
						<img src="css\images\crbst_marche1.jpg" class="d-block m-auto imgCar" alt="...">
					</div>
					<div class="carousel-item">
						<img src="css\images\sl_L_Arblay1.jpg" class="d-block  m-auto imgCar" alt="...">
					</div>
					<div class="carousel-item">
						<img src="css\images\crbst_Vaison.jpg" class="d-block m-auto imgCar" alt="...">
					</div>
				</div>
			</div>
			<h1 class="fontText text-center pt-2 m-3">“Le dessin a toujours été pour moi un moyen d’expression essentiel...”</h1>
		</div>
		<!--background-image-->
		<div class="imgContainer m-5">
			<img class="imgFrancois" src={{ asset('css/images/francoiskunze.jpg') }} alt="image de François Kunzé">
		</div>
		<div class="border-top m-3 pb-5 bg-success bg-opacity-50">
			<h1 class="fontTitle text-center p-5 pb-2">
				Actualité
			</h1>

			<div class="d-flex actu row justify-content-evenly">
				{% if actuality %}
					{% for actu in actuality %}
				<div class="d-flex p-5 rounded align-items-center actu col">
				{% if actu.image %}				
					<div>
						<img class="imgActu me-2 ms-2 rounded shadow" src={{ asset('css/images/' ~ actu.image) }} alt="Actualité principale">
					</div>
				{% endif %}
					<div class="bg-white p-3 rounded shadow d-flex flex-column align-items-center mt-3 mb-3">
						<div class="d-flex flex-row justify-content-start ps-4 w-100">
							<i class="bi bi-calendar-event pe-2"></i>
							<p>
								<small>Publiée le
									{{actu.publishedAt|date("d/m/Y")}}</small>
							</p>
						</div>
						<p>
							{{actu.title}}
						<br>
							<br>
							{{actu.content}}
						</p>
					</div>
				</div>
				{% endfor %}
			</div>
			<a href="/actuality">
				<p class="text-center">voir plus...</p>
			</a>
			{% endif %}
		</div>
	</body>
{% endblock %}
