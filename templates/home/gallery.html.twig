{% extends 'base.html.twig' %}
{% block title %}Galerie d'aquarelles
{% endblock %}

{% block body %}
	{% if is_granted('ROLE_ADMIN') %}
		<div class='d-flex justify-content-center'>
			<a class='btn btn-primary m-3' href="/painting/add">
				<i class="bi bi-plus me-2"></i>Ajouter une aquarelle</a>
		</div>
	{% endif %}
	<body class="backImg">
		<div class="d-flex justify-content-around flex-wrap container mt-1">

			{% for painting in paintings %}

				<div class="card m-2 card-bs p-2">
					{% if painting.image %}
						<a data-bs-toggle="modal" data-bs-target="#eModal"><img src={{ asset('css/images/' ~ painting.image) }} class="card-img-top" alt={{painting.name}}></a>
						<!-- Modal -->
						<div class="modal fade" id="eModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
							<div class="modal-dialog modal-xl">
								<div class="modal-content">
									<div class="modal-header">
										<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
									</div>
									<div class="modal-body">
										<img id="imgModal" class="card-img-top" alt={{painting.name}}>
									</div>
								</div>
							</div>
						</div>
					{% endif %}
					<div class="card-body">
						{% if painting.name %}
							<h5 class="card-title">{{painting.name}}</h5>
						{% endif %}
						<p class="card-text">{{painting.description}}</p>
					</div>
					<div class="card-footer">
						<small>
							{{painting.technic}}</p>
					</small>
				</div>
				{% if is_granted('ROLE_ADMIN') %}
					<button type="button" class="btn btn-danger m-1" id={{painting.id}} data-bs-toggle="modal" data-bs-target="#exampleModal">
						Supprimer
					</button>
					<!-- Modal -->
					<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
						<div class="modal-dialog">
							<div class="modal-content">
								<div class="modal-header">
									<h1 class="modal-title fs-5" id="exampleModalLabel">Vous allez supprimer une aquarelle</h1>
									<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
								</div>
								<div class="modal-body">
									En êtes-vous sûr ?
								</div>
								<div class="modal-footer">
									<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fermer</button>
									<a id="delete" type="button" class="btn btn-primary" href="">Supprimer définitivement</a>
								</div>
							</div>
						</div>
					</div>

					<a class='btn btn-warning m-1'>
						<i class="bi bi-pencil-square me-2"></i>Modifier</a>
				{% endif %}
			</div>
		{% endfor %}
	</div>	
</body>
{% endblock %}
