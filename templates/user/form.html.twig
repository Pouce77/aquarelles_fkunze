{% extends "base.html.twig" %}

{% block body %}
	<div class="m-auto mt-5 w-50 p-3 border border-primary rounded shadow">
		{{ form_start(form, {'attr': {'class': 'container'}}) }}
			{{form_row(form.username|escape)}}
			{{form_row(form.email|escape)}}
			{{form_label(form.password)}}
			<div class="input-group mb-3">
				{{form_widget(form.password)}}
				<span role="button" class="input-group-text" onclick="togglePassword()">
					<i class="bi bi-eye" id="eye"></i>
					<i class="bi bi-eye-slash d-none" id="eye-slash"></i>
				</span>
			</div>
			{{form_errors(form.password)}}
			{{ form_rest(form)}}
		<input class='btn btn-primary' type="submit" value="CrÃ©er le compte"></input>
		<div>
			<a href="/login" class="btn btn-link px-0">Se connecter</a>
		</div>
		{{form_end(form)}}
</div>
{% endblock %}
