{% extends 'base.html.twig' %}

{% block title %}Ajouter une aquarelle{% endblock %}

{% block body %}
<div class="m-3 w-50 p-3 border border-primary rounded shadow">
    {{ form_start(form) }}
    {{form_rest(form) }}
    
    {% if route == "/painting/add" %}
    <input class='btn btn-primary' type="submit" value="Ajouter l'aquarelle"></input>
    {% else %}
         <input class='btn btn-primary' type="submit" value="Modifier l'aquarelle"></input>
    {% endif %}
</div>
{% endblock %}
